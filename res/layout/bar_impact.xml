<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
   <TextView
       android:id="@+id/impact_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="20dp"
       android:gravity="left"
       android:text="對我戒毒的影響："
       android:textColor="@color/dark_gray"
       android:textSize="16sp" />

    <RelativeLayout
         android:id="@+id/msg_craving_seek_bar_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="-30dp" 
         android:gravity="center"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">
        
         
       
    	<ImageView
       		  android:id="@+id/msg_craving_bar_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" 
              android:contentDescription="@string/msg_box_help2"
              android:src="@drawable/impact_bar"
              android:layout_centerInParent="true" />

                <SeekBar
                    android:id="@+id/impact_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:max="4"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp"
                    android:progress="3"
                    android:progressDrawable="@color/transparent"
                    android:thumb="@drawable/impact_thumb" />
                
           <ImageView
       		  android:id="@+id/impact_dot"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/impact_dot2"
              android:layout_below="@+id/msg_craving_bar_bg"
              android:layout_marginTop="15dp"
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp" />     
                
                    
		<LinearLayout
		    android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:orientation="horizontal"
         	android:layout_below="@+id/msg_craving_bar_bg"
         	android:layout_marginTop="25dp">
         	
         		<TextView
                    android:id="@+id/msg_craving_num0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="沒影響"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/msg_craving_num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="普通"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/msg_craving_num2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="一點點"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/msg_craving_num3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="大"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/msg_craving_num4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="非常大"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_weight="1" />

			</LinearLayout>



      </RelativeLayout>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_gray">
    </TextView>
    
    
</LinearLayout>