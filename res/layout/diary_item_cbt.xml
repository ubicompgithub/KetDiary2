<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/diary_layout_cbt">
             
    <LinearLayout 
	        android:layout_width="match_parent"
	   	    android:layout_height="100dp"
	     	android:orientation="vertical"
	     	android:gravity="center"
	     	android:background="@drawable/bluebackground"
	     	android:paddingLeft="15dp"
	     	android:paddingRight="15dp">
	    <LinearLayout 
		        android:layout_width="match_parent"
		   	    android:layout_height="match_parent"
		     	android:orientation="horizontal"
		     	android:gravity="center"
		     	android:layout_weight="1">
		     	<LinearLayout
		             android:layout_width="0dp"
		             android:layout_height="match_parent"
		             android:orientation="vertical"
		             android:layout_weight="3">
		             
		     	    <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:orientation="vertical"
		             android:layout_weight="1"
		             android:gravity="left|bottom">
			             <TextView
			                 android:id="@+id/diary_date"
			                 android:layout_width="wrap_content"
			                 android:layout_height="wrap_content"
			                 android:text="10月27日(二)"
			                 android:textAppearance="?android:attr/textAppearanceMedium"
			                 android:textColor="@color/text_color"
			                 android:textSize="16sp"  />
			        </LinearLayout>
			        
			        <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:orientation="horizontal"
		             android:layout_weight="1"
		             android:gravity="left|top"
		             android:paddingTop="3dp" >
			             <TextView
			                 android:id="@+id/diary_timeslot"
			                 android:layout_width="wrap_content"
			                 android:layout_height="wrap_content"
			                 android:text="上午"
			                 android:textAppearance="?android:attr/textAppearanceMedium"
			                 android:textColor="@color/text_color"
			                 android:textSize="16sp"  />
			             <ImageView
			            	android:id="@+id/diary_check_reflection"
			            	android:layout_width="15dp"
			           		android:layout_height="15dp"
			           		android:layout_marginTop="2dp"
			           		android:layout_marginLeft="4dp"
			           		android:src="@drawable/check_reflection_null"/>
			            
			             <ImageView
			            	android:id="@+id/diary_check_thinking"
			            	android:layout_width="15dp"
			           		android:layout_height="15dp"
			           		android:layout_marginTop="2dp"
			           		android:layout_marginLeft="4dp"
			           		android:src="@drawable/check_thinking_null"/>
			              <ImageView
			            	android:id="@+id/diary_check_event"
			            	android:layout_width="15dp"
			           		android:layout_height="15dp"
			           		android:layout_marginTop="2dp"
			           		android:layout_marginLeft="4dp"
			           		android:src="@drawable/check_event"/>
			             
			             
			        </LinearLayout>
		             
		       </LinearLayout>
		      <RelativeLayout
		             android:layout_width="0dp"
		             android:layout_height="match_parent"
		             android:orientation="vertical"
		             android:gravity="center|left"
		             android:layout_weight="4" >
			        <ImageView
			            android:id="@+id/diary_image_type3"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:src="@drawable/mood_happy"
			            android:layout_marginLeft="45dp"
			            android:layout_centerVertical="true"/>
			        <ImageView
			            android:id="@+id/diary_image_type2"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:src="@drawable/mood_relax"
			            android:layout_marginLeft="25dp"
			            android:layout_centerVertical="true"/>
			         <ImageView
			            android:id="@+id/diary_image_type"
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:src="@drawable/mood_calm_clicked"
			            android:layout_marginLeft="5dp"
			            android:layout_centerVertical="true"/>
					<TextView
					    android:id="@+id/diary_impact_feeling"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:text="的"
					    android:gravity="center_vertical"
					    android:textAppearance="?android:attr/textAppearanceMedium"
					    android:textColor="@color/text_color"
					    android:textSize="12sp" 
					    android:layout_marginLeft="85dp"
					    android:layout_centerVertical="true"/>
			         
		       </RelativeLayout>
		       <LinearLayout
		             android:layout_width="0dp"
		             android:layout_height="match_parent"
		             android:orientation="vertical"
		             android:gravity="center"
		             android:layout_weight="2" >
				        
		           
		          	<LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:orientation="vertical"
		             android:gravity="center|bottom"
		             android:layout_weight="1">
			           <TextView
					        android:id="@+id/diary_impact_word"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="影響程度"
					        android:textAppearance="?android:attr/textAppearanceMedium"
					        android:textColor="@color/text_color"
					        android:textSize="12sp" />
					 </LinearLayout>
			         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:gravity="center|top"
		             android:layout_weight="1"
		             android:paddingTop="3dp">
					    <TextView
					        android:id="@+id/diary_impact"	      
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="有點小"
				            android:textAppearance="?android:attr/textAppearanceLarge"
				            android:textColor="@color/text_color"
				            android:textSize="16sp"/>
					  </LinearLayout>
		       </LinearLayout>
		
	    </LinearLayout>
	    <LinearLayout 
		        android:layout_width="match_parent"
		   	    android:layout_height="match_parent"
		     	android:orientation="horizontal"
		     	android:gravity="top|left"
		     	android:layout_weight="2">
		       <TextView
					 android:id="@+id/diary_description"	      
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:text="跟媽媽吵架，媽媽把我的CD都丟掉了，她 . . ."
				     android:textAppearance="?android:attr/textAppearanceLarge"
				     android:textColor="@color/text_color"
				     android:textSize="14sp"
				     android:layout_marginTop="5dp"/>
		</LinearLayout>
	</LinearLayout>
	
	<ImageView 
	     android:layout_width="match_parent"
	     android:layout_height="3dp"
	     android:src="@drawable/list_line"
	     android:layout_gravity="bottom"/>
	
</LinearLayout>
